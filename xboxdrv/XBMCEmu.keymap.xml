      <button id="7">ZoomNormal</button>
      <button id="8">Rotate</button>
      <button id="9">CodecInfo</button>
      <button id="2">PreviousPicture</button>
      <button id="3">NextPicture</button>
      <button id="0">ZoomIn</button>
      <button id="1">ZoomOut</button>
      <axis id="1">AnalogMove</axis>
      <axis id="2">AnalogMove</axis>
      <axis id="5" limit="+1">ZoomOut</axis>
      <axis id="2" limit="+1">ZoomIn</axis>
    </joystick>
  </SlideShow>
  <ScreenCalibration>
    <joystick name="XBMCEmu XBOX360 Controller">
