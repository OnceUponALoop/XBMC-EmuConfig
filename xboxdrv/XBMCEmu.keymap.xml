<!-- This is a template keymap file for the XBOX360 Controller  -->
<!-- You can modify the keymap file manually to include your    -->
<!-- unique button mapping                                      -->
<!-- Use the replace-all function in any word processor         -->
<!-- Buttons: 4         -> Button Number ex: 1-100              -->
<!-- Axis   : id="0" limit="-1"  -> id="0" limit="-1"                -->
<!--          where id is the axis number and limit +1/-1 is    -->
<!--          the direction                                     -->

<!-- This file contains the mappings for a Microsoft Xbox 360 Controller to actions within XBMC    -->
<!-- The <global> section is a fall through - they will only be used if the button is not          -->
<!-- used in the current window's section.  Note that there is only handling                       -->
<!-- for a single action per button at this stage.                                                 -->

<!-- The format of a mapping is:                                -->
<!--    <device name="name">                                    -->
<!--      <button id="x">action</button>                        -->
<!--      <axis id="x" limit="y">action</axis>                  -->
<!--      <hat id="1" position="left">action</hat>              -->
<!--    </device>                                               -->

<!-- Note that the action can be a built-in function.           -->
<!-- eg <button id="x">XBMC.ActivateWindow(Home)</button>       -->
<!-- would automatically go to Home on the press of button 'x'. -->

<keymap>
  <global>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="4">Select</button>
      <button id="5">Back</button>
      <button id="6">ContextMenu</button>
      <button id="7">FullScreen</button>
      <button id="8">Queue</button>
      <button id="9">Playlist</button>
      <button id="27">PreviousMenu</button>
      <button id="10">XBMC.ActivateWindow(Home)</button>
      <button id="11">XBMC.ActivateWindow(Home)</button>
      <button id="12">XBMC.ActivateWindow(ShutdownMenu)</button>
      <button id="13">XBMC.ActivateWindow(PlayerControls)</button>
      <button id="2">Left</button>
      <button id="3">Right</button>
      <button id="0">Up</button>
      <button id="1">Down</button>
      <axis id="0" limit="-1">AnalogSeekBack</axis>
      <axis id="0" limit="+1">AnalogSeekForward</axis>
      <axis id="1" limit="-1">AnalogSeekForward</axis>
      <axis id="1" limit="+1">AnalogSeekBack</axis>
      <axis id="3" limit="-1">VolumeDown</axis>
      <axis id="3" limit="+1">VolumeUp</axis>
      <axis id="4" limit="-1">VolumeUp</axis>
      <axis id="4" limit="+1">VolumeDown</axis>
      <axis id="2" limit="+1">ScrollUp</axis>
      <axis id="5" limit="+1">ScrollDown</axis>
    </joystick>
  </global>
  <Home>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="10">XBMC.Skin.ToggleSetting(HomeViewToggle)</button>
    </joystick>
  </Home>
  <MyFiles>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="9">Highlight</button>
    </joystick>
  </MyFiles>
  <MyMusicPlaylist>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="8">Delete</button>
    </joystick>
  </MyMusicPlaylist>
  <MyMusicFiles>
  </MyMusicFiles>
  <MyMusicLibrary>
  </MyMusicLibrary>
  <FullscreenVideo>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="4">Pause</button>
      <button id="5">Stop</button>
      <button id="6">OSD</button>
      <button id="8">AspectRatio</button>
      <button id="9">ShowSubtitles</button>
      <button id="27">SmallStepBack</button>
      <button id="10">Info</button>
      <button id="11">XBMC.ActivateWindow(Home)</button>  <!-- guide -->
      <button id="12">XBMC.ActivateWindow(ShutdownMenu)</button>  <!-- left stick -->
      <button id="13">AudioNextLanguage</button>  <!-- right stick -->
      <button id="2">StepBack</button>
      <button id="3">StepForward</button>
      <button id="0">BigStepForward</button>
      <button id="1">BigStepBack</button>
      <axis id="2" limit="+1">AnalogRewind</axis>
      <axis id="5" limit="+1">AnalogFastForward</axis>
    </joystick>
  </FullscreenVideo>
  <FullscreenLiveTV>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="2">PreviousChannelGroup</button>
      <button id="3">NextChannelGroup</button>
      <button id="0">ChannelUp</button>
      <button id="1">ChannelDown</button>
    </joystick>
  </FullscreenLiveTV>
  <FullscreenInfo>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="5">Close</button>
      <button id="6">OSD</button>
      <button id="10">Close</button>
      <axis id="5" limit="+1">AnalogRewind</axis>
      <axis id="2" limit="+1">AnalogFastForward</axis>
    </joystick>
  </FullscreenInfo>
  <PlayerControls>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="6">Close</button>
      <button id="12">Close</button>
      <button id="13">Close</button>
    </joystick>
  </PlayerControls>
  <Visualisation>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="4">Pause</button>
      <button id="5">Stop</button>
      <button id="6">XBMC.ActivateWindow(MusicOSD)</button>
      <button id="8">XBMC.ActivateWindow(VisualisationPresetList)</button>
      <button id="9">Info</button>
      <button id="13">XBMC.ActivateWindow(MusicOSD)</button>
      <button id="2">PreviousPreset</button>
      <button id="3">NextPreset</button>
      <button id="0">SkipPrevious</button>
      <button id="1">SkipNext</button>
