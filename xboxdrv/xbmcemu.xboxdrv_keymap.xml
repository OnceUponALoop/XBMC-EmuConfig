  </FullscreenLiveTV>
  <FullscreenInfo>
    <joystick name="XBMCEmu XBOX360 Controller">
      <button id="3">Close</button>
      <button id="4">OSD</button>
      <button id="8">Close</button>
      <axis id="5" limit="+1">AnalogRewind</axis>
      <axis id="2" limit="+1">AnalogFastForward</axis>
