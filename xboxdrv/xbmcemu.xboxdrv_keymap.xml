      <button id="11">AudioNextLanguage</button> 
      <button id="17">StepBack</button>
      <button id="18">StepForward</button>
      <button id="0">BigStepForward</button>
      <button id="1">BigStepBack</button>
      <axis id="2" limit="+1">AnalogRewind</axis>
      <axis id="5" limit="+1">AnalogFastForward</axis>
    </joystick>
  </FullscreenVideo>
    <joystick name="XBMCEmu XBOX360 Controller">
